<div class="favourite">
    <% if favourite = current_user.favourited(post) %>
    <%= link_to [post, favourite], class: 'btn btn-danger', method: :delete do %>
    <i class="glyphicon glyphicon-star-empty"> </i>&nbsp Favourite
    <% end %>
    <% else %>
    <%= link_to [post, Favourite.new], class: 'btn btn-primary', method: :post do %>
        <i class='glyphicon glyphicon-star'></i>&nbsp; Unfavourite
    <%end%>
    <% end %>
</div>